datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      String   @default("USER")
  createdAt DateTime @default(now())
}

model Sweet {
  id        String   @id @default(uuid())
  name      String
  category  String
  price     Float
  quantity  Int
  imageUrl  String?  @db.Text
  createdAt DateTime @default(now())
}

